<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Marcar Viagem"
            android:textColor="#7C7474"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="60dp" />

        <Button
            android:id="@+id/btn_time"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="370dp"
            android:background="#FFC107"
            android:text="Hora Ida" />

        <EditText
            android:id="@+id/et_date"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="320dp"
            android:textAlignment="textStart"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/et_datevolta"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="320dp"
            android:textAlignment="textStart"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/et_timevolta"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="370dp"
            android:textAlignment="textStart"
            android:textSize="15sp"/>


        <TextView
            android:id="@+id/ver_viagens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="265dp"
            android:cursorVisible="false"
            android:text="Ver Viagens Existentes"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="570dp"
            android:background="#FFC107"
            android:text="Guardar"
            android:textColor="#fff" />

        <!--<ImageView
            android:id="@+id/partilha2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="495dp"
            android:src="@drawable/ic_partilha" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="177dp"
            android:text="Destino:"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switch_bagagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="480dp"
            android:text="Bagagem   "
            android:textSize="15sp"
            android:textStyle="bold" />

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="570dp"
            android:background="@color/black"
            android:text="Cancelar"
            android:textColor="#fff"/>

        <Switch
            android:id="@+id/switch_necessidades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="435dp"
            android:text="Necessidades   "
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_time"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="370dp"
            android:textAlignment="textStart"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btn_date"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="320dp"
            android:background="#FFC107"
            android:text="Data Ida"
            android:textAlignment="center"/>

        <Button
        android:id="@+id/btn_datevolta"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="320dp"
        android:background="#FFC107"
        android:text="Data Volta"
        android:textAlignment="center"/>

        <Button
            android:id="@+id/btn_timevolta"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="370dp"
            android:background="#FFC107"
            android:text="Hora Volta" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:text="Origem:"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_bag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="473dp"
            android:hint="Ex: Mala de Cabine"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/nbagagem"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_marginTop="470dp"
            android:layout_marginLeft="300dp"
            android:hint="1"
            android:textAlignment="center"/>

        <Switch
            android:id="@+id/switch_idavolta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="260dp"
            android:text="Ida e Volta   "
            android:textSize="15sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_destino"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="200dp"
            android:background="@color/white"
            android:entries="@array/localidades"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/spinner_origem"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="125dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:entries="@array/localidades"
            android:spinnerMode="dropdown"/>

        <Switch
            android:id="@+id/switch_acompanhantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="525dp"
            android:text="Acompanhantes   "
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nacompanhantes"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_marginTop="515dp"
            android:layout_marginLeft="190dp"
            android:hint="0"
            android:textAlignment="center"/>

    </RelativeLayout>
</ScrollView>