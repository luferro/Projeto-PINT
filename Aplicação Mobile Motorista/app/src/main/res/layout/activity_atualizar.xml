<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Atualizar">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="412dp"
        android:layout_height="80dp"
        android:background="#ffc400"
        app:srcCompat="@drawable/muv" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Atualizar Palavra-Passe"
        android:textColor="#7C7474"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="100dp" />

    <EditText
        android:id="@+id/palavrapasse"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:background="@drawable/edit_round"
        android:drawableStart="@drawable/ic_action_pass"
        android:autofillHints=""
        android:hint="  Password"
        android:ems="10"
        android:inputType="textPassword"
        android:textSize="20sp"/>

    <ImageButton
        android:id="@+id/btn_eye"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_action_eye"
        android:layout_marginTop="260dp"
        android:layout_marginStart="300dp"
        android:background="#fff"/>

    <Button
        android:id="@+id/btn_atualizar"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:background="@drawable/button_round"
        android:text="Atualizar Palavra-Passe"
        android:textColor="#fff" />

</RelativeLayout>