<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:id="@+id/trip"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardCornerRadius="8dp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:padding="5dp"
        android:background="@color/cardview_dark_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cards">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                android:id="@+id/dia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="Dia"
                android:textSize="12sp">

            </TextView>

                <TextView
                    android:id="@+id/hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="5dp"
                    android:text="Hora"
                    android:textSize="12sp">

                </TextView>
                <TextView
                    android:id="@+id/startl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="20dp"
                    android:text="Inicio"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="bold">


                </TextView>

                <TextView
                    android:id="@id/endl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="270dp"
                    android:text="Chegada"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="bold">

                </TextView>
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="15dp"
                    android:src="@drawable/seta"
                    android:layout_marginTop="23dp"
                    android:layout_marginStart="100dp">

                </ImageView>
                <TextView
                    android:id="@id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="135dp"
                    android:layout_marginTop="40dp"
                    android:text="DistÃ¢ncia"
                    android:textSize="15sp">

                </TextView>


                    <ImageView
                        android:id="@+id/pessoas"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_action_people">

                    </ImageView>

                    <ImageView
                        android:id="@+id/special"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="80dp"
                        android:src="@drawable/ic_action_special">

                    </ImageView>

                    <ImageView
                        android:id="@+id/mala"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="130dp"
                        android:layout_marginTop="80dp"
                        android:src="@drawable/ic_action_mala">

                    </ImageView>



                        <TextView
                            android:id="@+id/ocupantes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="120dp"
                            android:layout_marginStart="25dp"
                            android:layout_gravity="center"
                            android:text="X"
                            android:textSize="20sp">

                        </TextView>

                        <TextView
                            android:id="@+id/especiais"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="125dp"
                            android:layout_marginStart="65dp"
                            android:text="Y"
                            android:textSize="16sp">

                        </TextView>

                <TextView
                    android:id="@+id/carga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="145dp"
                    android:text="Z"
                    android:textSize="20sp">

                </TextView>

                <Button
                    android:id="@+id/iniciar"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:background="@drawable/button_round"
                    android:layout_marginStart="205dp"
                    android:layout_marginTop="150dp"
                    android:text="Iniciar Viagem"
                    android:textColor="#fff">

                </Button>
                <Button
                    android:id="@+id/detalhes"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:background="@drawable/button_round"
                    android:layout_marginStart="205dp"
                    android:layout_marginTop="90dp"
                    android:text="Detalhes"
                    android:textColor="#fff">

                </Button>

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>