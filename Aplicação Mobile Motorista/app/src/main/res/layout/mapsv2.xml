<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Maps">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mapAPI"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="380dp" />
    <androidx.cardview.widget.CardView
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="350dp"
        app:cardCornerRadius="8dp" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/cardview_dark_background">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cards">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <TextView
                        android:id="@id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="55dp"
                        android:layout_marginTop="60dp"
                        android:text="(Distância)"
                        android:textSize="15sp">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="30dp"
                        android:text="Tempo Estimado:"
                        android:textSize="15sp">

                    </TextView>
                    <TextView
                        android:id="@id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="60dp"
                        android:text="Tempo"
                        android:textSize="15sp">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="90dp"
                        android:text="Custo Total a Receber:"
                        android:textSize="15sp">

                    </TextView>
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="130dp"
                        android:text="Preço"
                        android:textSize="15sp">

                    </TextView>

                    <ImageView
                        android:id="@+id/pessoas"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginStart="180dp"
                        android:src="@drawable/ic_action_people">

                    </ImageView>

                    <ImageView
                        android:id="@+id/special"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginStart="275dp"
                        android:src="@drawable/ic_action_special">

                    </ImageView>

                    <ImageView
                        android:id="@+id/mala"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="35dp"
                        android:layout_marginStart="330dp"
                        android:src="@drawable/ic_action_mala">

                    </ImageView>



                    <TextView
                        android:id="@+id/ocupantes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="43dp"
                        android:layout_marginStart="167dp"
                        android:text="X"
                        android:textSize="15sp">

                    </TextView>

                    <TextView
                        android:id="@+id/especiais"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="43dp"
                        android:layout_marginStart="220dp"
                        android:text="Y"
                        android:textSize="15sp">

                    </TextView>

                    <TextView
                        android:id="@+id/carga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="43dp"
                        android:layout_marginStart="325dp"
                        android:text="Z"
                        android:textSize="15sp">

                    </TextView>


                    <Button
                        android:id="@+id/conclusion"
                        android:layout_width="120dp"
                        android:layout_height="45dp"
                        android:background="@drawable/button_round"
                        android:layout_marginStart="245dp"
                        android:layout_marginTop="110dp"
                        android:text="Concluir"
                        android:textColor="#fff">

                    </Button>

                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>